<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/stopsonmap_buttoncontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/stopsonmap_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="button1"
            android:layout_weight="50"/>
        <Button
            android:id="@+id/stopsonmap_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="button2"
            android:layout_weight="50"/>
    </LinearLayout>

    <!--
    Below code obtained from:
    https://stackoverflow.com/questions/41197643/floating-action-button-on-top-of-map-fragment
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stopsonmap_buttoncontainer"
        >
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.theooswanditosw164.firstyone.StopsOnMap"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/stopsonmap_fab1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/StopsOnMap_FAB"
                app:borderWidth="0dp"
                app:fabSize="normal"

                android:src=""
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/stopsonmap_fab2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/StopsOnMap_FAB"
                app:borderWidth="0dp"
                app:fabSize="normal"

                android:src="@drawable/ic_favorite_border_black_48dp"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/stopsonmap_fab3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="@style/StopsOnMap_FAB"
                app:borderWidth="0dp"
                app:fabSize="normal"

                android:src="@drawable/ic_search_black_48dp"
                />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>