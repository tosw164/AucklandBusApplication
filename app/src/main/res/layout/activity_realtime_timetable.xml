<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.theooswanditosw164.firstyone.RealtimeTimetable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Bus stop number"
            android:id="@+id/realtime_board_edittext"
            android:inputType="number"/>

        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="GET"
            android:id="@+id/realtime_board_button"
            />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30sp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/realtim_board_listview"
        />

</android.support.constraint.ConstraintLayout>
